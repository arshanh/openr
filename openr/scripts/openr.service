[Unit]
Description=Facebook Open Routing Platform

[Service]
Type=simple
ExecStart=/usr/sbin/run_openr.sh /etc/sysconfig/openr
Restart=always
RestartSec=3
TimeoutSec=10
TimeoutStartSec=10
TimeoutStopSec=10
LimitNOFILE=10000000
LimitCORE=2G
SyslogIdentifier=openr
StandardOutput=syslog

[Install]
WantedBy=multi-user.target
